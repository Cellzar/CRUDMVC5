@model ProjectCRUD.Models.Clases.Usuario

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">

            <div class="ibox-content">


                <div class="row">

                    <br />
                    <div class="col-sm-6">

                        <div role="form">
                            <div class="form-group"><label>Nombre</label> <input type="text" name="name" id="PrimerNombreTxt1" value="@Html.DisplayFor(model => model.Nombre)" class="form-control" /></div>
                            <div class="form-group"><label>Primer Apellido</label> <input type="text" name="name" id="PrimerApellidoTxt1" value="@Html.DisplayFor(model => model.PrimerApellido)" class="form-control" /></div>

                        </div>
                    </div>
                    <div class="col-sm-6 ">
                        <div role="form">
                            <div class="form-group"><label>Identificación</label><input type="text" name="name" id="IdentificacionTxt1" value="@Html.DisplayFor(model => model.Identificacion)" class="form-control" /></div>
                            <div class="form-group"><label>Segundo Apellido</label> <input type="text" name="name" id="SegundoApellidoTxt1" value="@Html.DisplayFor(model => model.SegundoApellido)" class="form-control" /></div>

                        </div>
                    </div>
                    <div class="col-sm-6 ">
                        <div role="form">
                            <div class="form-group"><label>Fecha de nacimiento</label><input type="text" name="name" id="FechaTxt1" value="@Html.DisplayFor(model => model.FechaNacimiento)" class="form-control" /></div>
                            <div class="form-group"><label>Telefono</label> <input type="text" name="name" id="TelefonoTxt1" value="@Html.DisplayFor(model => model.Telefono)" class="form-control" /></div>

                        </div>
                    </div>
                    <div class="col-sm-6 ">
                        <div role="form">
                            <div class="form-group"><label>Edad</label><input type="text" name="name" id="EdadTxt1" value="@Html.DisplayFor(model => model.Edad)" disabled class="form-control" /></div>
                            <div class="form-group"><label>Barrio</label><input type="text" name="name" id="BarrioTxt1" value="@Html.DisplayFor(model => model.Barrio)" class="form-control" /></div>
                        </div>
                    </div>
                    <div class="col-sm-6 ">
                        <div role="form">
                            <div class="form-group"><label>Dirección</label><input type="text" name="name" id="DireccionTxt1" value="@Html.DisplayFor(model => model.Direccion)" class="form-control" /></div>
                            

                        </div>
                    </div>

                </div>


                @*@Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary"})
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-white"})*@
                <button onclick="Update(@Html.DisplayFor(model => model.id))" class="btn btn-primary">Actualizar</button>
            </div>
        </div>
    </div>
</div>



